@model ModelUsuarios

@{
    ViewData["Title"] = "NuevoUsuario";
}

<h1>NuevoUsuario</h1>

<form asp-action="guardar" asp-controller ="Usuarios" method="post">
      <div class="mb-3 row">
       <label for="staticName" class="col-sm-2 col-form-label">User name</label>
    <div class="col-sm-10">
      <input asp-for="UsuarioUserName" type="text" class="form-control-plaintext" id="staticName" placeholder="Ingresa tu nombre de usuario" required>
    </div>

    @if (false) {
            <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input asp-for="UsuarioUserName" type="email" class="form-control-plaintext" id="staticEmail" placeholder="email@example.com" required>
            </div>
        
    }
   
  </div>
  <div class="mb-3 row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input asp-for="UsuarioPassword" type="password" class="form-control" id="inputPassword">
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Registrarse</button>
</form>



