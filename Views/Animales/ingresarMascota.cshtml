@model ModelAnimales

@{
    ViewData["Title"] = "Error al Registrar Animal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Error!</h4>
        <p>No se pudo ingresar la mascota. Intenta nuevamente.</p>
        <hr>
        <p class="mb-0">Por favor, revisa los siguientes campos:</p>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>

    <h5>Intenta completar nuevamente el formulario:</h5>

    <form asp-action="ingresarMascota" asp-controller="Animales" method="post">
        <div class="row g-3 align-items-center p-3 fw-bold">

            <div class="col-md-4">
                <label for="especieId" class="form-label">Especie</label>
                <input asp-for="EspecieId" type="number" class="form-control" id="especieId" required>
            </div>

            <div class="col-md-4">
                <label for="razaId" class="form-label">Raza</label>
                <input asp-for="RazaId" type="number" class="form-control" id="razaId" required>
            </div>

            <div class="col-md-4">
                <label for="animalNombre" class="form-label">Nombre del Animal</label>
                <input asp-for="AnimalNombre" type="text" class="form-control" id="animalNombre" required>
            </div>

            <div class="col-md-4">
                <label for="animalSexo" class="form-label">Sexo</label>
                <select asp-for="AnimalSexo" class="form-control" id="animalSexo" required>
                    <option value="" disabled selected>Seleccione el sexo del animal</option>
                    <option value="M">Masculino</option>
                    <option value="F">Femenino</option>
                </select>
            </div>

            <div class="col-md-4">
                <label for="animalEdad" class="form-label">Edad</label>
                <input asp-for="AnimalEdad" type="number" class="form-control" id="animalEdad" required>
            </div>

            <div class="col-md-4">
                <label for="animalFechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                <input asp-for="AnimalFechaNacimiento" type="date" class="form-control" id="animalFechaNacimiento" required>
            </div>

            <div class="col-md-4">
                <label for="animalPeso" class="form-label">Peso</label>
                <input asp-for="AnimalPeso" type="number" class="form-control" id="animalPeso" required>
            </div>

            <div class="col-md-4">
                <label for="animalCastrado" class="form-label">¿Animal Castrado?</label>
                <select asp-for="AnimalCastrado" class="form-select" id="animalCastrado" required>
                    <option value="" disabled selected>Seleccione una opción</option>
                    <option value="1">Sí</option>
                    <option value="0">No</option>
                </select>
            </div>

            <div class="col-md-4">
                <label for="animalEstado" class="form-label">Estado</label>
                <input asp-for="AnimalEstado" type="number" class="form-control" id="animalEstado" required>
            </div>

            <div class="col-md-4">
                <label for="documentoId" class="form-label">Documento ID</label>
                <input asp-for="DocumentoID" type="number" class="form-control" id="documentoId" required>
            </div>

            <div class="col-md-4">
                <label for="animalDocumento" class="form-label">Número de Documento</label>
                <input asp-for="AnimalDocumento" type="text" class="form-control" id="animalDocumento" required>
            </div>

            <div class="col-md-4">
                <label for="animalDescripcion" class="form-label">Descripción</label>
                <textarea asp-for="AnimalDescripcion" class="form-control" id="animalDescripcion" rows="3"></textarea>
            </div>

            <div class="col-md-6">
                <button type="submit" class="btn btn-primary mb-4 fw-bold">Registrar</button>
            </div>
        </div>
    </form>
</div>
